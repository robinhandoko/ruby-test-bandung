<%- model_class = Profile -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @profile.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @profile.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:storage) %>:</strong></dt>
  <dd><%= @profile.storage %></dd>
  <dt><strong><%= model_class.human_attribute_name(:include_path) %>:</strong></dt>
  <dd><%= @profile.include_path %></dd>
  <dt><strong><%= model_class.human_attribute_name(:exclude_path) %>:</strong></dt>
  <dd><%= @profile.exclude_path %></dd>
</dl>

<%= link_to t('.back', default: t("helpers.links.back")),
              profiles_path, class: 'btn btn-default'  %>

<%= link_to "Browse", browse_profile_path(@profile), class: 'btn btn-info'  %>

<%= link_to t('.destroy', default: t("helpers.links.destroy")),
              profile_path(@profile),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
