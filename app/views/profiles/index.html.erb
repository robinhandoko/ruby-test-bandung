<%- model_class = Profile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:storage) %></th>
      <th><%= model_class.human_attribute_name(:include_path) %></th>
      <th><%= model_class.human_attribute_name(:exclude_path) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= link_to profile.id, profile_path(profile) %></td>
        <td><%= profile.name %></td>
        <td><%= number_to_human_size profile.storage %></td>
        <td><%= profile.include_path %></td>
        <td><%= profile.exclude_path %></td>
        <td><%=l profile.created_at %></td>
        <td>
          <%= link_to "",
            run_backup_profile_path(profile),
            class: 'btn btn-info btn-xs glyphicon glyphicon-flash'
          %>

          <%= link_to "", profile_path(profile),
            :method => :delete,
            :data => { :confirm => 'Are you sure?' },
            :class => 'btn btn-xs btn-danger glyphicon glyphicon-trash' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_profile_path,
            :class => 'btn btn-primary' %>
